{
  "compilerOptions": {
      "target": "es5",
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "allowJs": true, // tanto javascript como typescript
      // "jsx": "preserve"
      "jsx": "react-jsx", // podemos usar o .jsx
      "noEmit": true,
      "module": "esnext",
      "strict": true, // por default = false, mas Ã© legal deixar como true para ele reclamar mais
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  // "include": [
  //     "**/*.ts",
  //     "**/*.tsx"
  // ],
  "exclude": [
      "node_modules"
  ]
}
